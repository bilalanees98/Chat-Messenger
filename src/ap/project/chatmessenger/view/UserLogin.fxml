<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ap.project.chatmessenger.view.UserLoginController">
   <children>
      <Label layoutX="24.0" layoutY="75.0" text="Login to ChatMessenger">
         <font>
            <Font name="System Bold" size="22.0" />
         </font></Label>
      <Label layoutX="37.0" layoutY="162.0" text="Username" />
      <Label layoutX="39.0" layoutY="233.0" text="Password" />
      <TextField fx:id="usernameField" layoutX="114.0" layoutY="158.0" />
      <PasswordField fx:id="passwordField" layoutX="114.0" layoutY="229.0" onKeyTyped="#handleEnter" />
      <ButtonBar layoutX="34.0" layoutY="299.0" prefHeight="40.0" prefWidth="214.0">
        <buttons>
          <Button fx:id="okButton" mnemonicParsing="false" onAction="#handleOk" text="Ok" />
            <Button fx:id="exitButton" minWidth="70.0" mnemonicParsing="false" onAction="#handleExit" prefHeight="25.0" prefWidth="102.0" text="Exit" />
        </buttons>
      </ButtonBar>
   </children>
</AnchorPane>
